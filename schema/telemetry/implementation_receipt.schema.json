{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:coherencelattice:schema:implementation_receipt:v1",
  "title": "Implementation Receipt",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id","version","created_at",
    "proposal_path","proposal_sha256",
    "summary","files_changed","tests",
    "telemetry_delta","rollback_plan_path"
  ],
  "properties": {
    "schema_id": { "const": "coherencelattice.implementation_receipt.v1" },
    "version": { "type": "integer", "minimum": 1 },
    "created_at": { "type": "string", "format": "date-time" },

    "proposal_path": { "type": "string", "minLength": 1 },
    "proposal_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },

    "summary": { "type": "string", "minLength": 1 },

    "files_changed": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },

    "tests": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ucc","python"],
      "properties": {
        "ucc": { "type": "string", "minLength": 1 },
        "python": { "type": "string", "minLength": 1 }
      }
    },

    "telemetry_delta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["before","after"],
      "properties": {
        "before": { "type": "object", "additionalProperties": true },
        "after": { "type": "object", "additionalProperties": true }
      }
    },

    "rollback_plan_path": { "type": "string", "minLength": 1 },
    "notes": { "type": "string" }
  }
}
