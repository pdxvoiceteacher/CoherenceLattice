{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "$id":"ucc.identity.vc_registry.v0_1",
  "type":"object",
  "additionalProperties":false,
  "required":["schema_id","version","entries","revocations"],
  "properties":{
    "schema_id":{"const":"ucc.identity.vc_registry.v0_1"},
    "version":{"const":1},
    "entries":{
      "type":"array",
      "items":{
        "type":"object",
        "additionalProperties":false,
        "required":["vc_id","vc_sha256","issuer_did","subject_did","types","issued_at"],
        "properties":{
          "vc_id":{"type":"string","minLength":1},
          "vc_sha256":{"type":"string","pattern":"^[0-9a-f]{64}$"},
          "issuer_did":{"type":"string","minLength":1},
          "subject_did":{"type":"string","minLength":1},
          "types":{"type":"array","items":{"type":"string"}},
          "issued_at":{"type":"string","minLength":1}
        }
      }
    },
    "revocations":{
      "type":"array",
      "items":{
        "type":"object",
        "additionalProperties":false,
        "required":["vc_id","revoked_at","reason"],
        "properties":{
          "vc_id":{"type":"string","minLength":1},
          "revoked_at":{"type":"string","minLength":1},
          "reason":{"type":"string","minLength":1}
        }
      }
    }
  }
}
