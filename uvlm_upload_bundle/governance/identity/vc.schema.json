{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "$id":"ucc.identity.vc.v0_1",
  "type":"object",
  "additionalProperties":true,
  "required":["schema_id","version","id","type","issuer","issuanceDate","credentialSubject","proof"],
  "properties":{
    "schema_id":{"const":"ucc.identity.vc.v0_1"},
    "version":{"const":1},
    "id":{"type":"string","minLength":1},
    "type":{
      "type":"array",
      "minItems":1,
      "items":{"type":"string","minLength":1}
    },
    "issuer":{"type":"string","minLength":1},
    "issuanceDate":{"type":"string","minLength":1},
    "expirationDate":{"type":"string"},
    "credentialSubject":{"type":"object"},
    "proof":{
      "type":"object",
      "additionalProperties":true,
      "required":["type","created","verificationMethod","proofPurpose","jws","payload_sha256"],
      "properties":{
        "type":{"const":"Ed25519Signature2020"},
        "created":{"type":"string","minLength":1},
        "verificationMethod":{"type":"string","minLength":1},
        "proofPurpose":{"const":"assertionMethod"},
        "jws":{"type":"string","minLength":1},
        "payload_sha256":{"type":"string","pattern":"^[0-9a-f]{64}$"}
      }
    }
  }
}
